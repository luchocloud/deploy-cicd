name: CI/CD Pipeline for Wazuh

# Trigger the workflow on pushes to the main branch
on:
  push:
    branches:
      - main

jobs:
  # Test job: Check Wazuh configurations
  test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2
        
      - name: Set up Docker
        uses: docker/setup-buildx-action@v2

      - name: Build Wazuh container
        run: |
          docker pull wazuh/wazuh-indexer:4.11.1

      - name: Run automated tests on Wazuh configurations
        run: |
          docker run --rm -v ${{ github.workspace }}/rules:/rules wazuh/wazuh-indexer:4.11.1 \
            /bin/bash -c "run-wazuh-tests.sh"  # Replace with actual test command or script

  # Deploy job: Deploy updated Wazuh rules to the Wazuh container
  deploy:
    runs-on: ubuntu-latest
    needs: test  # Ensure deploy only runs if tests pass

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Docker
        uses: docker/setup-buildx-action@v2

      - name: Pull Wazuh Docker Image
        run: |
          docker pull wazuh/wazuh-indexer:4.11.1

      - name: Deploy Wazuh detection rules
        run: |
          # Copy the custom rule from the repository into the running container
          docker cp ${{ github.workspace }}/rules/custom-rules.xml single-node-wazuh.indexer-1:/rules/custom-rules.xml
          
          # Copy the rule to the appropriate location inside the container and restart Wazuh service
          docker exec -it single-node-wazuh.indexer-1 /bin/bash -c \
            "cp /rules/custom-rules.xml /var/ossec/etc/rules/ && /var/ossec/bin/ossec-control restart"
